<div class="container">
	<div class="row">
		<div class="history col-md-6">
			<h3>閲覧履歴</h3>
			<% @history.reverse_each do |history| %>
			<div class="well well-lg">
                <p><%= link_to history.novel.title, novel_path(history.novel_id) %></p>
                <p>><%= history.novel.synopsis.truncate(30) %></p>
            </div>
			<% end %>
		</div>
		<div class="col-md-6">
				<%= image_tag('img/sample2_img.jpg', class: 'history-image') %>
			</div>
    </div>
</div>
