	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<%= form_for @page, :url => novel_page_path do |f| %>
		    <div class="form-group">
		    	<tr>ページタイトル<%= f.text_field :title ,class:'form-control' %></tr>
		    </div>
