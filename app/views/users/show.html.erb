<div class="well"><%= @user.name %>さんのページ</div>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1 class="small-title">投稿作品一覧</h1>


            <% @novels.each do |novel| %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title"><%= link_to novel.title, novel_path(novel) %></h5>
                    <div class="writer-name">
                        <h5>
                            <%= link_to novel.user.name, user_path(novel.user.id) %>
                        </h5>
                    </div>
                </div>
                <div class="panel-body">
                    <%= novel.synopsis.truncate(30) %>
                </div>
            </div>
            <% end %>
        </div>


        <div class="col-md-6">
            <div class="user-info well">
                <h3>名前：<%= @user.name %></h3>
                <h3>投稿作品数：<%= @user.novels.count %></h3>
                <% if @favorites.count.present? %>
                    <h3>総獲得いいね数：<%= @favorites.count %></h3>
                <% end %>
            </div>
        <%= image_tag('img/sample12_img.jpg',  class: 'mypage-image',) %>
        </div>
    </div>
</div>



