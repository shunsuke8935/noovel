<div class="well"><%= @user.name %>さんのページ</div>
<div class="container">
	<div class="row">
		<div class="novel-index col-md-6">
			<h3>投稿作品一覧</h3>
            <% @novels.each do |novel| %>
            <div class="well well-lg">
                <p><%= link_to novel.title, novel_path(novel) %></p>
                <p>><%= novel.synopsis.truncate(30) %></p>
            </div>
            <% end %>
        </div>
        <%= image_tag('img/sample_img.jpg',  class: 'mypage-image col-md-6') %>
    </div>
</div>
