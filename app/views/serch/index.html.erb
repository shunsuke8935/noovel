<div class="container">
  <div class="row">
    <div class="history col-md-6">
      <h3>検索結果</h3>
      <% @search_novels.each do |novel| %>
      <div class="well well-lg">
                <p><%= link_to novel.title, novel_path(novel.id) %></p>
                <p>><%= novel.synopsis.truncate(30) %></p>
            </div>
      <% end %>
    </div>
    <div class="col-md-6">
        <%= image_tag('img/sample7_img.jpg', class: 'history-image') %>
      </div>
    </div>
</div>