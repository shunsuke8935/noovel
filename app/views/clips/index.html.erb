<div class="container">
	<div class="row">
		<div class="history col-md-6">
			<h3>ブックマーク</h3>
			<% @clips.reverse_each do |clip| %>
			<div class="well well-lg">
                <p><%= link_to clip.novel.title, novel_path(clip.novel.id) %></p>
                <p>><%= clip.novel.synopsis.truncate(30) %></p>
            </div>
			<% end %>
		</div>
		<div class="col-md-6">
				<%= image_tag('img/sample7_img.jpg', class: 'history-image') %>
			</div>
    </div>
</div>